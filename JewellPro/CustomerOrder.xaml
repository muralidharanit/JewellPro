                        <TextBlock Text="Grand Total : " Style="{StaticResource JPTextBlock}" />
                        <TextBox Text="{Binding TotalGoldWeight, StringFormat=N2, UpdateSourceTrigger=PropertyChanged, Mode =TwoWay}" Style="{StaticResource JPReadOnlyTextBox}" />
